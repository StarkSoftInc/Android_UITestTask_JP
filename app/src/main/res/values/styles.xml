<resources>

    <!--    region Buttons-->
    <style name="EsignTestTask.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">@dimen/dp_44</item>
        <item name="materialThemeOverlay">@style/EsignTestTaskPrimaryButtonThemeOverlay</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/button_bg_color</item>
    </style>

    <style name="EsignTestTaskPrimaryButtonThemeOverlay">
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorOnSurface">?attr/colorPrimary</item>
    </style>

    <style name="EsignTestTask.ButtonOutline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/whisper_60_alpha</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EsignTestTask.ButtonText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_height">@dimen/dp_44</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--    endregion-->

    <style name="ShapeAppearanceOverlay.EsignTestTask.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.EsignTestTask.CircularProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="trackThickness">@dimen/dp_10</item>
        <item name="trackCornerRadius">@dimen/dp_4</item>
        <item name="indicatorColor">@color/dodger_blue</item>
        <item name="trackColor">@color/white</item>
    </style>

</resources>